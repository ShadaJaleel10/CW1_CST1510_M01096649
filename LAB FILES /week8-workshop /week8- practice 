import pandas as pd 
import sqlite3 
#need to connect or create a database 
conn = sqlite3.connect('example1.db')

#create a curser obj
cur = conn.cursor()

#create a table 
cur.execute('''CREATE TABLE IF NOT EXISTS users (id INTEGER PRIMARY KEY, name TEXT, age INTEGER)''' )


#INSERT DATA - A ROW INTO THE TABLE 
cur.execute("INSERT INTO users(name, age) VALUES(?,?)",('ALI',17) ) 
             

cur.executemany("INSERT INTO users(name, age) VALUES(?,?)",[('Alice', 30),('Bob', 80)]) 

#changes to be saved by using 'commit'
conn.commit()

#Query the database 
cur.execute("SELECT * FROM users")

print(cur.fetchall())

cur.execute('''UPDATE users SET age = 40 WHERE (name= 'ALI')''')
conn.commit()

cur.execute("SELECT * FROM users" )       

print(cur.fetchall())

conn.close()
            
